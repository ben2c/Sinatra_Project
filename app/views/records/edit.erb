<h2>Edit Patient's Medical Records</h2>

<form action='/records/<%= @record.id %>' method='post'>
    <input type='hidden' name='_method' value='patch' id='hidden'>

    <label for='p_name'>Name: </label>
    <input type="text" name="p_name" id="p_name" value="<%= @record.p_name %>"><br>

    <label for='sex'>Sex: </label>
    <input type="text" name="sex" id="sex" value="<%= @record.sex %>"><br>

    <label for="age">Age: </label>
    <input type="text" name="age" id="age" value="<%= @record.age %>"><br>

    <label for="disease">Disease: </label>
    <textarea name="disease" id="disease" value= "<%= @record.disease %"></textarea><br>
    <input type="submit" value="Update Info">
</form>